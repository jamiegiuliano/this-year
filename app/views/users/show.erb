<h2><%= current_user.username %>'s Year (so far)</h2><br />

<p>Resolutions</p>
<ul>
<% current_user.resolutions.each do |res| %>
  <label for="<%= res.id%>"><input type="checkbox" name="resolutions" id="<%= res.id%>" value="<%=res.id%>"
    <%='checked' if @current_user.resolutions.include?(res) %>> <%=res.name%></input></label>
    <a href="/resolutions/<%=res.id%>/edit">Edit</a>
    <br></br>
<% end %>
</ul>
<br>

<p>Events</p>
<ul>
<% current_user.events.each do |event| %>
  <li><a href="/events/<%=event.id%>"><%= event.name %></a></li><br />
<% end %>
</ul>
<br>
