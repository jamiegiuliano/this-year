<div class="landing-page--div h-100">
  <div class="container h-100 landing-page--info text-center">
    <h1 class="display-2 landing-page--header">This Year</h1>
  <div class="mr-auto ml-auto">
    <p class="lead"><br />Signup<br /> & Get Started.</p>
</div>

<form action="/signup" method="POST">
    <label for="new_username">Username:</label>
      <input type="text" name="username" placeholder="Username:" id="new_username"></input>

    <label for="new_email">Email:</label>
      <input type="email" name="email" placeholder="Email:" id="new_email"></input>

    <label for="new_password">Password:</label>
      <input type="password" name="password" placeholder="Password:" id="new_password"></input>

      <!-- warning/flash message -->
      <% if flash.has?(:message) %>
        <div class="alert alert-warning" role="alert">
            <%= flash[:message] %>
        </div>
      <% end %><br></br>

    <br /><input class="btn btn-lg btn-primary" type="submit" value="Signup"></input>
</form>
