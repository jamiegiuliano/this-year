<div class="container mt-4">
  <h3 class="display-4 text-center">Edit an Event</h3>

<form action="/events/<%=@event.id%>" method="POST">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <div class="row justify-content-center">
    <div class="form-group col-md-4">

  <label for="event_name">Event Name:</label>
  <form class="form-inline">
    <div class="form-group col-sm">
      <input class="form-control" type="text" name="event[name]" placeholder="<%=@event.name%>" id="event_name"></input>
    </div>

  <label for="event_date">Event Date:</label>
    <div class="form-group col-sm">
      <input class="form-control" type="date" name="event[date]" value="<%=@event.date%>" id="event_date"></input>
    </div>

  <label for="event_desc">Description(optional):</label>
    <div class="form-group col-sm">
      <textarea class="form-control" name="event[description]" placeholder="<%=@event.description unless nil%>" id="event_desc"></textarea>
    </div>

  </div>
    <div class="container">
      <div class="row justify-content-center">
      <button type="submit" class="btn btn-primary">Edit</button>
</form>

<!-- Delete -->
<form action="/events/<%=@event.id%>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete">

  <button type="submit" class="btn btn-default btn-md" style="margin-left:10px;">
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  </button>
          </div>
        </div>
</form>
</div>
</div>
