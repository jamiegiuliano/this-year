<h3>Add a Resolution</h3>

<!-- warning/flash message -->
<% if flash.has?(:message) %>
  <div class="alert alert-warning" role="alert">
      <%= flash[:message] %>
  </div>
<% end %><br></br>


<form action="/resolutions/show" method="POST">

  <label for="name">Event Name:</label>
    <input type="text" name="name" placeholder="Drink more water." id="name"></input><br></br>

  <input type="submit" value="submit">
</form>
