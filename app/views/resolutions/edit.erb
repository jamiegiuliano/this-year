<div class="container mt-4">
<h3 class="display-4 text-center">Edit a Resolution</h3>
  <br />

<form action="/resolutions/<%=@resolution.id%>" method="POST">
  <div class="row justify-content-center">
  <div class="form-group col-md-4">
      <input id="hidden" type="hidden" name="_method" value="patch">

      <label for="name" class="container mt-4 justify-content-center" >New Name:</label>
        <input class="form-control" type="text" name="resolution[name]" placeholder="<%=@resolution.name%>" id="name"></input>

  </div>
    <div class="container">
      <div class="row justify-content-center">
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<!-- Delete -->
<form action="/resolutions/<%=@resolution.id%>/delete" method="POST">
  <input id="hidden" type="hidden" name="_method" value="delete">

  <button type="submit" class="btn btn-default btn-md" style="margin-left:10px;">
    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
  </button>
</div>
</div>
</div>


</form>
</div>
</div>
